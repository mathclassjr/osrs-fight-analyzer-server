{
    "compilerOptions": {
        "module": "CommonJS",        
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
